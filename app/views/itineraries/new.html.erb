
<div class="container">

  <h1>Add new Itinerary</h1>

  <div class="row" style="margin-top:20px">
    <div class="col-md-8">
      <%= bootstrap_form_for @itinerary do |f| %>

      <div class="col-md-12">
        <%= f.text_field(:name, placeholder: "Trip Name") %>
      </div>
      <div class="col-md-8">

        <%= f.text_field(:origin, placeholder: "Origin") %>
        <%= f.text_field(:destination, placeholder: "Destination") %>


      </div>
      <div class="col-md-4">

        <%= f.date_field :departure %>
        <%= f.date_field :return_on %>
      </div>

      <div class="col-md-4 col-md-offset-4">
        <%= f.submit  "Submit", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>







