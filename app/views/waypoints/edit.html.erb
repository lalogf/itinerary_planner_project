<div class="container">

  <h1>Edit Waypoint</h1>

  <div class="row" style="margin-top:20px">

    <div class="col-md-8">
      <%= bootstrap_form_for [@it, @waypoint], method: "put" do |f| %>

      <div class="col-md-8">

        <%= f.text_field(:location, placeholder: "Location") %>
        <%= f.text_field(:name, placeholder: "Attraction name") %>
        <%= f.date_field :traveldate %>



      </div>


      <div class="col-md-4 col-md-offset-4">
        <%= f.submit  "Edit", class: "btn btn-success" %>
      </div>
      <% end %>

    </div>
  </div>
</div>